@model GigsViewModel

@{
    ViewData["Title"] = "Gigs Your Attending";
}

<h2>Gigs Your Attending.</h2>

<ul class="calendar">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">@gig.DateAndTime.ToString("MMM")</div>
                <div class="day">@gig.DateAndTime.ToString("d ")</div>
            </div>
            <div class="detail">
                <p class="artist">
                    <b>@gig.Artist.FullName</b>
                </p>
                <p class="genre">@gig.Genre.Name</p>
            </div>
        </li>
    }
</ul>

