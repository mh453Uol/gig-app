@model GigsViewModel
@{
    ViewData["Title"] = "Gigs";
}

<h2 class="voffset4">@Model.Heading.</h2>

<form asp-controller="Gigs" asp-action="Search" method="post">
    <div class="form-group">
        <div class="input-group" id="searchGigs">
            <input asp-for="SearchTerm" type="text" class="form-control" placeholder="Search for a gig..">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>


<div class="alert alert-info collapse js-alert-error">
    <a href="#" class="pull-right" style="color:white" onclick="$('.js-alert-error').hide()">x</a>
    <p></p>
</div>

<ul class="calendar">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date" title="@gig.DateAndTime.ToString("F")">
                <div class="month">@gig.DateAndTime.ToString("MMM")</div>
                <div class="day">@gig.DateAndTime.ToString("d ")</div>
            </div>
            <div class="detail">
                <p class="artist">
                    <b>@gig.Artist.FullName</b>
                    @if (gig.IsCancelled)
                    {
                        <span class="label label-warning">CANCELLED!</span>
                    }
                </p>
                <p class="genre">@gig.Genre.Name</p>
                @if (Model.IsAuthenticated)
                {
                    <button data-artist-id="@gig.ArtistId" class="btn btn-default btn-xs js-toggle-following">Follow Artist</button>
                    @if (!gig.IsCancelled)
                    {
                        <button data-gig-id="@gig.Id" class="btn btn-default btn-xs js-toggle-attendance">Going ?</button>
                    }
                }
            </div>
        </li>
    }
</ul>

@section Scripts
    {
    <script>
        $(document).ready(function () {

            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .success(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function (xhr, textStatus, errorThrown) {
                        var alert = $(".js-alert-error");
                        alert.find("p").text(xhr.responseText);
                        alert.show();
                    });
            });

            $(".js-toggle-following").click(function (e) {
                var button = $(e.target);
                $.post("/api/following/follow", { FolloweeId: button.attr("data-artist-id") })
                    .success(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Following");
                    })
                    .fail(function (xhr, textStatus, errorThrown) {
                        var alert = $(".js-alert-error");
                        alert.find("p").text(xhr.responseText);
                        alert.show();
                    })
            });
        });
    </script>

}
