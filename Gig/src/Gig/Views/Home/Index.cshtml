@model IEnumerable<Gig>
@{
    ViewData["Title"] = "Home Page";
}

<ul class="calendar">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">@gig.DateAndTime.ToString("MMM")</div>
                <div class="day">@gig.DateAndTime.ToString("d ")</div>
            </div>
            <div class="detail">
                <p class="artist"><b>@gig.Artist.FullName</b></p>
                <p class="genre">@gig.Genre.Name</p>
                <a href="#" class="btn-primary btn-sm going-btn">Going ?</a>
            </div>
        </li>
    }
</ul>
